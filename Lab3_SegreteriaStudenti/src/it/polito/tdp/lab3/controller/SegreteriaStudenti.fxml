<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65" fx:controller="it.polito.tdp.lab3.controller.SegreteriaStudentiController">
   <center>
      <VBox alignment="TOP_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <HBox prefWidth="200.0">
               <children>
                  <Label text="Corso:">
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                     <HBox.margin>
                        <Insets top="15.0" />
                     </HBox.margin>
                  </Label>
                  <ChoiceBox fx:id="cbCorsi" prefHeight="25.0" prefWidth="82.0">
                     <HBox.margin>
                        <Insets left="25.0" top="15.0" />
                     </HBox.margin>
                  </ChoiceBox>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Studente:">
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="txtMatricola" prefHeight="25.0" prefWidth="82.0" text="Matricola">
                     <HBox.margin>
                        <Insets left="6.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="buttonOk" mnemonicParsing="false" onAction="#doOk" text="OK">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
                  <TextField fx:id="txtNome" prefHeight="25.0" prefWidth="57.0" text="Nome">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </TextField>
                  <TextField fx:id="txtCognome" text="Cognome">
                     <HBox.margin>
                        <Insets left="10.0" right="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="8.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Button fx:id="buttonCerca" mnemonicParsing="false" onAction="#doCerca" text="Cerca">
                     <HBox.margin>
                        <Insets left="290.0" top="15.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="buttonIscrivi" mnemonicParsing="false" onAction="#doIscrivi" text="Iscrivi">
                     <HBox.margin>
                        <Insets left="20.0" top="15.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextArea fx:id="txtArea" prefHeight="75.0" prefWidth="403.0">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" top="15.0" />
                     </HBox.margin>
                  </TextArea>
               </children>
            </HBox>
            <Button fx:id="buttonReset" mnemonicParsing="false" onAction="#doReset" text="Reset">
               <VBox.margin>
                  <Insets bottom="5.0" right="5.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
   <top>
      <Label text="Lab3_SegreteriaStudenti" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
